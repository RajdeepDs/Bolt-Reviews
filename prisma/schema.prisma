generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Session {
  id                  String    @id
  shop                String
  state               String
  isOnline            Boolean   @default(false)
  scope               String?
  expires             DateTime?
  accessToken         String
  userId              BigInt?
  firstName           String?
  lastName            String?
  email               String?
  accountOwner        Boolean   @default(false)
  locale              String?
  collaborator        Boolean?  @default(false)
  emailVerified       Boolean?  @default(false)
  refreshToken        String?
  refreshTokenExpires DateTime?
}

model Product {
  id               String   @id @default(cuid())
  shopifyProductId String
  shopId           String
  title            String
  handle           String
  imageUrl         String?
  reviewCount      Int      @default(0)
  averageRating    Float    @default(0)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  reviews Review[]

  @@unique([shopId, shopifyProductId])
  @@index([shopId])
  @@index([shopifyProductId])
}

model Review {
  id            String   @id @default(cuid())
  productId     String
  shopId        String
  customerName  String
  customerEmail String?
  rating        Int
  title         String
  content       String   @db.Text
  status        String   @default("pending") // "pending", "published", "rejected"
  isVerified    Boolean  @default(false)
  helpful       Int      @default(0)
  notHelpful    Int      @default(0)
  imageUrl      String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@index([productId])
  @@index([shopId])
  @@index([status])
  @@index([createdAt])
}

model Settings {
  id                      String   @id @default(cuid())
  shopId                  String   @unique
  autoPublish             Boolean  @default(false)
  requireModeration       Boolean  @default(true)
  allowGuestReviews       Boolean  @default(true)
  requireVerifiedPurchase Boolean  @default(false)
  minRatingToPublish      Int      @default(1)
  enableReviewImages      Boolean  @default(true)
  emailNotifications      Boolean  @default(true)
  notificationEmail       String?
  createdAt               DateTime @default(now())
  updatedAt               DateTime @updatedAt

  @@index([shopId])
}
